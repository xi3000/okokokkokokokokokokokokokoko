--// AUTO CENTER PETS FOR GROW A GARDEN
-- WARNING: Chỉ client-side, không can thiệp server

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local TweenService = game:GetService("TweenService")

local LocalPlayer = Players.LocalPlayer
local autoCenter = false

-- GUI
local ScreenGui = Instance.new("ScreenGui", LocalPlayer:WaitForChild("PlayerGui"))
ScreenGui.Name = "PetCenterGui"

local Button = Instance.new("TextButton", ScreenGui)
Button.Size = UDim2.new(0, 150, 0, 50)
Button.Position = UDim2.new(0.05, 0, 0.1, 0)
Button.Text = "Center Pets: OFF"
Button.BackgroundColor3 = Color3.fromRGB(170,0,0)
Button.TextColor3 = Color3.fromRGB(255,255,255)
Button.TextScaled = true
Button.Font = Enum.Font.SourceSansBold
Button.BorderSizePixel = 0

Button.MouseButton1Click:Connect(function()
    autoCenter = not autoCenter
    if autoCenter then
        Button.Text = "Center Pets: ON"
        Button.BackgroundColor3 = Color3.fromRGB(0,170,0)
    else
        Button.Text = "Center Pets: OFF"
        Button.BackgroundColor3 = Color3.fromRGB(170,0,0)
    end
end)

-- Vị trí trung tâm vườn (bạn chỉnh theo tọa độ thực tế trong game)
local centerPosition = Vector3.new(0, 3, 0) -- Y=3 để pet không bị chạm đất

-- Tween info
local tweenInfo = TweenInfo.new(
    1, -- thời gian di chuyển 1 giây
    Enum.EasingStyle.Linear,
    Enum.EasingDirection.Out,
    0, -- repeat count (0=1 lần)
    false, -- reverses
    0 -- delay
)

-- Hàm di chuyển pet về trung tâm
local function movePetToCenter(pet)
    if pet:IsA("Model") and pet:FindFirstChild("HumanoidRootPart") then
        local hrp = pet.HumanoidRootPart
        local tween = TweenService:Create(hrp, tweenInfo, {CFrame = CFrame.new(centerPosition)})
        tween:Play()
    end
end

-- Loop chính
RunService.Heartbeat:Connect(function()
    if autoCenter then
        for _, pet in pairs(workspace:GetChildren()) do
            if pet.Name:find("Pet") then -- Nhận diện pet
                movePetToCenter(pet)
            end
        end
    end
end)
